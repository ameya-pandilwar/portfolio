        <shape android:shape="rectangle">
            <corners android:radius="3dip"/>
            <stroke android:width="1dip" android:color="#36797f"/>
            <gradient android:angle="-270" android:endColor="#274e62" android:startColor="#54b7f7"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
