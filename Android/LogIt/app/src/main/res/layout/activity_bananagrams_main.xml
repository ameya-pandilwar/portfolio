<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#FFBB33"
              android:gravity="center"
              android:orientation="vertical"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Bananagrams"
        android:textColor="@android:color/black"
        android:textSize="40sp"
        android:paddingBottom="10dp"
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:id="@+id/activity_bananagrams_main_resume"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/custom_tile1"
        android:text="Resume"
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/activity_bananagrams_easy"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_tile"
        android:text="Easy"
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/activity_bananagrams_medium"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_tile2"
        android:text="Medium"
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/activity_bananagrams_difficult"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_selected"
        android:text="Difficult"
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/activity_bananagrams_acknowledgement"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_tile"
        android:text="Acknowledgements"
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/activity_bananagrams_quit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_tile1"
        android:text="Quit"
        android:textColor="@android:color/white"/>

</LinearLayout>
