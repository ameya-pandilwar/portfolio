<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/custom_background"
              android:gravity="center"
              android:orientation="vertical"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              tools:context=".CommunicationActivity">


    <TextView
        android:id="@+id/activity_communication_tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You are connected to "
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/activity_communication_tv_friendname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dharam"
        android:textSize="24sp"/>

    <Button
        android:id="@+id/activity_communication_bt_notif"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_button"
        android:text="Send Notification"/>

    <Button
        android:id="@+id/activity_communication_bt_enter_hs"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_button"
        android:text="Enter High Score"/>

    <Button
        android:id="@+id/activity_communication_bt_view_hs"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_button"
        android:text="View Top High Scores"/>

    <Button
        android:id="@+id/activity_communication_bt_ack"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_button"
        android:text="Acknowledgements"/>
</LinearLayout>
